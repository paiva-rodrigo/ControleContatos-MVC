@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação apagar o usuario";
}

<div class="text-center">
    <h3>Realemnte quer apagar o usuario(@Model.Nome)? </h3>

    <a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-secondary btn-block" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>

</div>

