@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="d-grid gap-2 d-md-block">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo Contato</a>
</div>
<br />

@if(TempData["MensagemSucesso"]!= null){
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-labl="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-labl="Close">X</button>
    </div>
}

<br />

<div class="text-center">
<h1 class="display-4">Listagem de Contatos</h1>
<table class="table" id="table-contatos">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Celular</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
         @if(Model != null && Model.Any()){
            foreach(ContatoModel contato in Model){
                <tr>
                    <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
</div>
